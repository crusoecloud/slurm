global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets: {{ (groups['slurm_compute_nodes'] + groups['slurm_head_nodes'] + (groups['slurm_nfs_nodes'] | default([]))) | unique | map('regex_replace', '^(.*)$', '\\1:9100') | list | to_json }}

  - job_name: 'dcgm_exporter'
    static_configs:
      - targets: [
        {%- for host in groups['slurm_compute_nodes'] -%}
          {%- if hostvars[host]['instance_type'] is defined and hostvars[host]['instance_type'].split('.')[0] | regex_search(gpu_instance_types | join('|')) -%}
            "{{ host }}:9400"{% if not loop.last %},{% endif %}
          {%- endif -%}
        {%- endfor -%}
      ]